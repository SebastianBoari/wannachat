</div>

<main id="main-container">
    <header id="header">
        <figure id="heade-figure">
            <img src="./assets/wannachat-logo.png" alt="Wanna chat logo">
        </figure>
    </header>
    <section id="chat">
        <article id="chat-history">
        </article>
        <form id="chat-form" action="/">    
